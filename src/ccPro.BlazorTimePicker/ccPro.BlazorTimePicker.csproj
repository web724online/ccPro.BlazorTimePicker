<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<OutputType>Library</OutputType>

		<!-- Package Info -->
		<PackageId>ccPro.BlazorTimePicker</PackageId>
		<Version>1.0.1</Version>
		<Authors>ccPro</Authors>
		<Company>ccPro</Company>
		<Description>Generic TimePicker component for Blazor supporting string, TimeSpan, TimeOnly</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/web724online/ccPro.BlazorTimePicker</PackageProjectUrl>
		<RepositoryUrl>https://github.com/web724online/ccPro.BlazorTimePicker</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.36" />
	</ItemGroup>
	<ItemGroup>
	  <Content Update="wwwroot\js\ccPro.BlazorTimePicker.js">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>


</Project>
